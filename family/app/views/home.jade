
//- # home

extends layout

block content
  .container
    .row
      .col-md-12
        img(src='https://unsplash.com/photos/vlSyS1VLCoQ/download', alt='family-fun')
        p
              The Parrish Family Web site, a place to connect with family and friends.
        ul.list-inline
          li: a(href='/users').btn.btn-primary.btn-lg Users
          li: a(href='/users/new').btn.btn-primary.btn-lg Create User
          if req.isAuthenticated()
            li: a(href='/my-account').btn.btn-primary.btn-lg My Account
            li: a(href='/logout').btn.btn-primary.btn-lg Log Out
          else
            li: a(href='/signup').btn.btn-primary.btn-lg Sign Up
            li: a(href='/login').btn.btn-primary.btn-lg Log In
